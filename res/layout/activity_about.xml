<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/msg_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:ems="10"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/msg_about"
            android:textStyle="italic" >
        </TextView>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/current_version"
            android:layout_below="@+id/msg_about"
            android:layout_gravity="center"
            android:background="#e1ddcf"
            android:fillViewport="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="8dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"                
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_version3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="@string/version3" />
                
                <TextView
                    android:id="@+id/msg_bugfix3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/txt_version3"
                    android:text="@string/msg_bug_fix3" >
                </TextView>
                
                <TextView
                    android:id="@+id/txt_version2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/version2"
                    android:paddingTop="8dp"
                    android:layout_below="@+id/msg_bugfix3" >
                </TextView>

                <TextView
                    android:id="@+id/msg_bugfix2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/msg_bug_fix2"
                    android:layout_below="@+id/txt_version2" >
                </TextView>
                
                <TextView
                    android:id="@+id/txt_version1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/version1"
                    android:paddingTop="8dp"
                    android:layout_below="@+id/msg_bugfix2" >
                </TextView>

                <TextView
                    android:id="@+id/msg_bugfix1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/msg_bug_fix1"
                    android:layout_below="@+id/txt_version1" >
                    </TextView>
                    <TextView
                    android:id="@+id/txt_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/version"
                    android:paddingTop="8dp"
                    android:layout_below="@+id/msg_bugfix1" >
                </TextView>

                <TextView
                    android:id="@+id/msg_bugfix"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/msg_bug_fix"
                    android:layout_below="@+id/txt_version" >
             
                </TextView>

             </RelativeLayout>
        </ScrollView>

            <TextView
                android:id="@+id/web_link"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:text="@string/web_link"
                android:textColor="#87847c"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:textStyle="italic"
                android:layout_above="@+id/web_link" />

            <TextView
                android:id="@+id/current_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"                
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="@string/msg_current_version"
                android:layout_marginBottom="60dp"
                android:textColor="#87847c"
                android:textStyle="italic"
                android:layout_above="@+id/email" />

        </RelativeLayout>
    

</RelativeLayout>
